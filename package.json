{
  "name": "desktop-for-ynab",
  "productName": "Desktop for YNAB",
  "author": "Open Source Community",
  "version": "0.1.0",
  "description": "A desktop wrapper for YNAB",
  "main": "main.js",
  "scripts": {
    "start": "electron ./app",
    "postinstall": "install-app-deps",
    "pack": "build --dir",
    "dist": "build",
    "dist-mac": "build -m",
    "dist-lin-win": "build -lw",
    "clean": "rm -rf dist"
  },
  "build": {
    "appId": "com.toolkit-for-ynab.desktop-for-ynab",
    "app-category-type": "public.app-category.finance",
    "fileAssociations": [
      {
        "ext": "qif",
        "name": "Quicken Interchange Format"
      },
      {
        "ext": "ofx",
        "name": "Open Financial Exchange"
      },
      {
        "ext": "csv",
        "name": "Comma Separated Values"
      }
    ],
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "win": {
      "remoteReleases": "https://github.com/toolkit-for-ynab/desktop-for-ynab",
      "nsiTemplate" : "nsi-template/installer.nsi"
    },
    "linux": {
      "target": ["deb", "AppImage"]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/toolkit-for-ynab/desktop-for-ynab.git"
  },
  "bugs": {
    "url": "https://github.com/toolkit-for-ynab/desktop-for-ynab/issues"
  },
  "devDependencies": {
    "electron-builder": "next",
    "electron-prebuilt": "^1.2.0"
  }
}
